@model WebUI.Models.CreditcardModel
@{
    ViewBag.Title = "Creditcard";
}

<h2>Creditcard betaling</h2>
@using (Html.BeginForm(@*"ValidateCredit", "Pin", FormMethod.Post, new { reservationID = Model.reservationID }*@))
 {
@Html.AntiForgeryToken()
<div class="form-horizontal">
    <div class="container">
        @Html.ValidationSummary(true)
        <div class="form-group">
            <label>Creditcardnummer: </label>
            @Html.EditorFor(m => m.Creditcard)
            @Html.ValidationMessageFor(m => m.Creditcard)
            <label>Maand: </label>
            @Html.EnumDropDownListFor(m => m.Month, Model.Month)
            @Html.ValidationMessageFor(m => m.Month)
            <label>Jaar: </label>
            @Html.EditorFor(m => m.Year, Model.Year)
            @Html.ValidationMessageFor(m => m.Year)
            <label>CVC: </label>
            @Html.EditorFor(m => m.CVC)
            @Html.ValidationMessageFor(m => m.CVC)
        </div>
        @*<button type="submit">Bevestig</button>*@
        <button type="button" id="oneclick" class="btn btn-danger" onclick="location.href='@Url.Action("Finish", "Pin", new { reservationID = Model.reservationID })';disableButton(this)">Betaal &amp; Print Tickets</button>
    </div>
</div>
 }